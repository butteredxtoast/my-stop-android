<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.MyStop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item> <!-- Set to transparent if this affects background -->
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
    </style>

    <!-- No Action Bar Theme extending Theme.MyStop -->
    <style name="Theme.MyStop.NoActionBar" parent="Theme.MyStop">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyStop.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/background_dark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

</resources>
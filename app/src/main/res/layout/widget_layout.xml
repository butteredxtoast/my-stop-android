<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?android:attr/windowBackground">

    <!-- Refresh Icon (ImageView) -->
    <ImageView
        android:id="@+id/widget_refresh_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_refresh"
        android:contentDescription="@string/refresh"
        android:padding="8dp" />

    <!-- Main Content Area -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Row for MUNI Data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_muni_line_ref"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Line #: "
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/widget_muni_minutes_away"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" minutes"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="end"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- Second Row for MUNI Data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_muni_line_ref_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Line #: "
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/widget_muni_minutes_away_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" minutes"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="end"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- Row for BART Data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_bart_line_ref"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Line #: "
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/widget_bart_minutes_away"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" minutes"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="end"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- Second Row for BART Data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_bart_line_ref_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Line #: "
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/widget_bart_minutes_away_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" minutes"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="end"
                android:paddingStart="8dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>